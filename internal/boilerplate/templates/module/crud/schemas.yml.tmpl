schemas:
  {{ .MdlNameCap }}:
    allOf:
      - $ref: '../openapi.yml#/components/schemas/Model'
      - type: object
        properties:
          Name:
            type: string
            example: "Name"

  {{ .MdlNameCap }}ListFilter:
    type: object
    properties:
      offset:
        type: integer
        example: 0
      limit:
        type: integer
        example: 10
      search:
        type: string
        example: "Admin User"

  Create{{ .MdlNameCap }}Request:
    type: object
    required:
      - name
    properties:
      Name:
        type: string
        example: "Name"

  Update{{ .MdlNameCap }}Request:
    type: object
    required:
      - name
    properties:
      Name:
        type: string
        example: "Name"
